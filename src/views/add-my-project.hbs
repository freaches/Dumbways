        <div class="container mx-auto mt-4">
          <h2 class="text-center">Add My Project</h1>
        </div>

        <form class="container mx-auto mt-5 w-50" method="post" action="/add-my-project">
          <div class="mb-3">
            <label for="my-project" class="form-label">My Project</label>
            <input type="text" name="title" class="form-control" id="my-project">
          </div>
          <div class="mb-3 d-flex flex-wrap">
            <div class="w-50">
                <label for="awal" class="form-label">Start Date</label>
                <input type="date" name="start_date" id="awal" class="form-control"/>
            </div>
            <div class="w-50">
                <label for="akhir" class="form-label">End Date</label>
                <input type="date" name="end_date" id="akhir" class="form-control"/>
            </div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control h-25" name="description" aria-label="With textarea" style="resize: none;" id="description"></textarea>
          </div>
          <label class="form-label">Technologies</label>
          <div class="mb-3 d-flex flex-wrap">
            <div class="w-50">
              <div class="form-check">
                <input type="checkbox" name="node" class="form-check-input" id="node-js" value="Node Js">
                <label class="form-check-label" for="node-js">Node Js</label>
              </div>
              <div class="form-check">
                <input type="checkbox" name="react" class="form-check-input" id="react-js" value="React Js">
                <label class="form-check-label" for="react-js">React Js</label>
              </div>
            </div>
            <div class="w-50">
              <div class="form-check">
                <input type="checkbox" name="next" class="form-check-input" id="next-js" value="Next Js">
                <label class="form-check-label" for="next-js">Next Js</label>
              </div>
              <div class="form-check">
                <input type="checkbox" name="script" class="form-check-input" id="typeScript" value="Type Script">
                <label class="form-check-label" for="typeScript">Type Script</label>
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="input-blog-image" class="form-label">Upload Image</label>
            <input type="file" name="image" class="form-control" id="input-blog-image">
          </div>
          <div class="d-flex justify-content-end mt-3 mb-5">
            <button type="submit" class="btn btn-primary">Post Project</button>
          </div>
        </form>

    </body>

