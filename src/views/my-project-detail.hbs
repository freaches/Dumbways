<html>
    <head>
        <title>Project-Detail</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- <link href="css/style.css" rel="stylesheet" />
        <link rel="stylesheet" href="css/mobile.css" /> -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>

    <body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
              <a class="navbar-brand me-5" href="/">
                <img src="/Image/logo.png" alt="logo"/>   
              </a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item me-2">
                    <a class="nav-link active" href="/">Home</a>
                  </li>
                  <li class="nav-item me-2">
                    <a class="nav-link" href="/add-my-project">Add My Project</a>
                  </li>
                  <li class="nav-item me-2">
                    <a class="nav-link" href="/testimonial">Testimonial</a>
                  </li>
                </ul>
                <div class="d-flex" role="search">
                  <a class="btn btn-danger" href="/contact-me">Contact Me</a>
                </div>
              </div>
            </div>
        </nav>
        
        <div class="container">
          <div class="m-5">
              <h1 class="text-center mb-4">{{content.title}}</h1>
              <div class="d-flex flex-wrap mb-5 justify-content-evenly">
                  <img src="/Image/makanan.jpg" alt="makan" class="w-50"/>
                  <div style="width: 35%;">
                      <h2 class="mb-3">Duration</h2>
                      <div class="mb-4">
                          <i class="fa-regular fa-calendar-days">&nbsp {{content.start_date}} - {{content.end_date}}</i><br><br>
                          <i class="fa-regular fa-clock">&nbsp {{content.duration}}</i>
                      </div>
                      <h2 class="mb-3">Technologies</h2>
                      <div class="d-flex flex-wrap justify-content-between">
                          <div class="d-flex flex-column justify-content-between">
                              {{{content.tech1}}}
                          </div>

                          <div class="d-flex flex-column justify-content-between">
                              {{{content.tech2}}}
                          </div>
                          
                      </div>

                  </div>
                  
              </div>
          <p class="p-3">
              {{content.description}}
          </p>
        </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


    <script src="Js/button.js"></script>

</html>