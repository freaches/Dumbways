        </div>
        <div class="container-fluid p-5 mt-5">
            <h1 class="text-center mb-4">My Project</h1>
            <hr>
            <div class="p-5 d-flex flex-wrap justify-content-around" id="contents">
                {{#each content}}
                <div class="w-25 bg-secondary-subtle p-3 rounded">
                    <img src="Image/makanan.jpg" alt="makan" class="w-100"/>
                    <a href="my-project-detail/{{this.id}}" target="_blank" class="text-black fs-4 text-decoration-none">{{this.title}}</a>
                    <p style="font-size: 15px; color: grey;">Durasi : {{this.duration}}</p>
                    <p class="fs-6">
                        {{this.description}} 
                    </p>
                    <div class="d-flex justify-content-around fs-4 mb-3">
                    {{#each this.techs}}
                        {{{this}}}
                    {{/each}}
                    </div>
                    <div class="d-flex justify-content-around mt-2">
                        <a class="rounded bg-primary text-decoration-none text-light" style="width=40%;padding: 2% 15%;" href="/edit-project/{{this.id}}">Edit</a>
                        <a class="rounded bg-primary text-decoration-none text-light" style="padding: 2% 12%;" href="/delete-project/{{this.id}}">Delete</a>
                    </div>
                </div>
                {{/each}}
            </div>
    </body>
